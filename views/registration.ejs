<%- include('header') -%>
<div class="reg-title d-flex justify-content-center align-items-center bg-dark h-20">
    <h1 class="text-white">File Sharing Application</h1>
</div>

<div class="text-center py-5">
    <div class="container border w-25 p-3">
        <div class="title">
            <h2 class="font-weight-bold">Register</h2>
        </div>

        <form action="/register" method="post">
            <div class="row gy-2 d-flex flex-column">
                <div class="form-group d-flex flex-column">
                    <label for="email" class="align-self-start">Email</label>
                    <input type="email" class="form-control" name="email" id="email" placeholder="Email" >
                </div>
                <div class="form-group d-flex flex-column">
                    <label for="username" class="align-self-start">Username</label>
                    <input type="text" class="form-control" name="username" id="username" placeholder="username" >
                </div>
                <div class="form-group d-flex flex-column">
                    <label for="password" class="align-self-start">Password</label>
                    <input type="password" class="form-control" name="password" id="password" placeholder="password" >
                </div>
                <button type="submit" class="btn rounded-pill btn-primary w-50 align-self-center">Submit</button>
            </div>
            
        </form>
        <a href="<%= header%>">Already have an account?Login then!</a>
    </div>
</div>

<%- include('footer') -%> 