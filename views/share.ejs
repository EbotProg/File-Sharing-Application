<%- include('header') -%>
<div class="reg-title d-flex justify-content-center align-items-center bg-dark h-20">
    <h1 class="text-white">File Sharing Application</h1>
</div>

<div class="text-center py-5">
    <div class="container border w-25 p-3">
        <div class="title">
            <h2 class="font-weight-bold">Share with a friend</h2>
            <p class="alert alert-info">Go back and copy link</p>
        </div>
      
        <form action="/shareInfo" method="post">
            <div class="row gy-2 d-flex flex-column">
                <div class="form-group d-flex flex-column">
                    <label for="downloadPage" class="align-self-start">Paste URL</label>
                    <input type="url" class="form-control" name="downloadPage" id="downloadPage" placeholder="url" >
                </div>
                <div class="form-group d-flex flex-column">
                    <label for="email" class="align-self-start">Email</label>
                    <input type="email" class="form-control" name="email" id="email" placeholder="Email" >
                </div>
                
                <button type="submit" class="btn rounded-pill btn-primary w-50 align-self-center">Share</button>
            </div>
            
        </form>
    </div>
</div>

<%- include('footer') -%> 